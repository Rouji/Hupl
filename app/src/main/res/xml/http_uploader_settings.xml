<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/httpuploader_category_host" >
        <EditTextPreference
            android:title="@string/httpuploader_name_title"
            android:dialogMessage="@string/httpuploader_title_summary"
            android:key="name"/>
        <EditTextPreference
            android:title="@string/httpuploader_url_title"
            android:dialogMessage="@string/httpuploader_url_summary"
            android:key="targetUrl"/>
        <EditTextPreference
            android:title="@string/httpuploader_param_title"
            android:dialogMessage="@string/httpuploader_param_summary"
            android:key="fileParam"/>

        <EditTextPreference
            android:title="@string/httpuploader_regex_title"
            android:key="responseRegex"/>
        <eu.imouto.hupl.ui.StringMapPreference
            android:title="@string/httpuploader_headers_title"
            android:dialogMessage="@string/httpuploader_headers_summary"
            android:key="headers"/>
        <eu.imouto.hupl.ui.StringMapPreference
            android:title="@string/httpuploader_extra_params_title"
            android:dialogMessage="@string/httpuploader_extra_params_summary"
            android:key="extraParams"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/httpuploader_category_auth" >
        <EditTextPreference
            android:title="@string/httuploader_user_title"
            android:dialogMessage="@string/httpuploader_user_summary"
            android:key="authUser"/>
        <EditTextPreference
            android:title="@string/httpuploader_pass_title"
            android:dialogMessage="@string/httpuploader_pass_summary"
            android:key="authPass"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/httuploader_category_etc">
        <CheckBoxPreference
            android:title="@string/httpuploader_disablechunkedtransfer_title"
            android:summary="@string/httpuploader_disablechunkedtransfer_summary"
            android:key="disableChunkedTransfer"/>
    </PreferenceCategory>
</PreferenceScreen>
